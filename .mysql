CREATE DATABASE news_db;
USE news_db;

CREATE TABLE news_articles (
    id VARCHAR(36) PRIMARY KEY,
    title TEXT NOT NULL,
    description TEXT,
    url VARCHAR(255),
    publication_date DATETIME,
    source_name VARCHAR(100),
    category JSON,
    relevance_score DOUBLE,
    latitude DOUBLE,
    longitude DOUBLE
);

