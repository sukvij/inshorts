    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Current File",
            "type": "go",
            "request": "launch",
            "mode": "debug", // Explicitly set to debug mode
            "program": "${file}", // Launches the Go file currently open in the editor
            "args": [] // Optional: Add command-line arguments here if needed
        },
        {
            "name": "Launch Program (Current Folder)",
            "type": "go",
            "request": "launch",
            "mode": "debug", // Explicitly set to debug mode
            "program": "${workspaceFolder}", // Launches the main package in the current workspace folder
            "args": [] // Optional: Add command-line arguments here if needed
        },
        {
            "name": "Launch Program (Specific Package)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/your_app", // Example: Replace with path to your main package (e.g., "cmd/server")
            "args": []
        },
        {
            "name": "Launch Tests (Current File)",
            "type": "go",
            "request": "launch",
            "mode": "test", // Special mode for running tests
            "program": "${file}", // Runs tests in the currently open _test.go file
            "args": []
        },
        {
            "name": "Launch All Tests (Current Folder)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}", // Runs all tests in the current workspace folder
            "args": []
        }
    ]
}
